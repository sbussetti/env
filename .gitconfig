[include]
  path = .gitconfig.local

[alias]
  b = branch
  bd = branch -D
  br = branch -r
  bra = branch -ra
  c = commit
  ca = commit -a
  caa = commit -a --amend
  cam = commit -am
  cm = commit -m
  co = checkout
  cob = checkout -b
  cp = cherry-pick
  d = diff
  f = fetch
  ft = fetch --tags
  m = merge
  pl = pull
  p = push
  pt = push --tags
  pu = push -u
  put = push --tags -u
  puf = push -f
  r = remote
  rv = remote -v
  rb = rebase
  rbi = rebase -i
  rbc = rebase --continue
  rpo = remote prune origin
  s = status
  smu = submodule update
  smurr = submodule update --recursive --remote
  st = stash
  t = tag

  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  relog = log --no-merges --pretty=format:'%h | %ad | %s%d [%an]' --abbrev-commit --date=short
  tagref = show-ref --tags
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  taghist = log --pretty=format:'%h %ad | %s%d [%an]' --tags --no-walk --date=short

  ec = config --global -e
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
  lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  dl = "!git ll -1"
  dlc = diff --cached HEAD^

[diff]
  tool = fugitive
[difftool]
  prompt = false
[difftool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
  tool = fugitive
[mergetool]
  prompt = false
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[color]
  ui = true
[push]
  default = matching
[core]
  precomposeunicode = true
[url "git@github.corp.dyndns.com:"]
	insteadOf = https://github.corp.dyndns.com/
