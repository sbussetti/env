root = true
; trim_trailing_whitespace = false

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{html,tmpl,handlebars,tpl}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.md]
indent_size = 2

[*.conf]
indent_size = 2

[*.j2]
indent_size = 2

[{Makefile,BundlerMakefile}]
indent_style = Tab

[*.groovy]
indent_style = space
indent_size = 4

[{Jenkinsfile,*Jenkinsfile,Jenkinsfile*}]
indent_style = space
indent_size = 4
